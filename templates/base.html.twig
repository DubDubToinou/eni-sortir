<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    {% block javascript %}
    {# Flatpicker (calendrier datetimepicker) #}
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    {# Flatpicker import de la traduction française #}
    <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>
    {# Flatpicker : notre fichier de configuration #}
    <script src="{{ asset("js/flatpicker_myconfig.js") }}"></script>
    {% endblock %}
    <title>{% block title %}Sortir | {% endblock %}</title>
    {% block script %}{% endblock %}
    {% block style %}{% endblock %}
</head>
<body>


<header>
    <a href="{{ path('app_main') }}">Accueil</a>
    {% if app.user %}
        <a href="{{ path('app_participant_profil', {'id':app.user.id}) }}">Mon Profil</a>
        <a href="{{ path('app_logout') }}">Se déconnecter</a>
        {% if is_granted("ROLE_ADMIN") %}
            <a href="{{ path('admin_index') }}">Admin</a>
        {% endif %}
    {% else %}
        <a href="{{ path('app_register') }}">S'inscrire</a>
        <a href="{{ path('app_login') }}">Se Connecter</a>
    {% endif %}

</header>
<main>
    {# ------------ For pour affichage des message flash -------------- #}

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


    {% block body %}

    {% endblock %}
</main>
<footer>

</footer>


</body>
</html>