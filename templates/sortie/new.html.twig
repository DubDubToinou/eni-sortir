{% extends 'base.html.twig' %}

{% block title %}Organiser{% endblock %}
{% block script %}
    <script defer>
        const close = document.querySelector('.close');
        const open = document.querySelector('.open');

        function openPopUp() {
            document.querySelector('.popUp').style.display = "block";
        }

        function closePopUp() {
            document.querySelector('.popUp').style.display = "none";
        }
    </script>
{% endblock %}

{% block style %}
    <style>
        .popUp {
            display: none;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Organiser une sortie</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <button class="btn" name="save">Sauvegarder</button>
    {{ form_end(form) }}

    <button type="button" class="open" onclick="openPopUp()">Ajouter un lieu</button>

    <div class="popUp">
        {{ form_start(lieuForm) }}
        {{ form_widget(lieuForm) }}
        <button type="submit">Ajouter</button>
        {{ form_end(lieuForm) }}
        <button type="button" class="close" onclick="closePopUp()">Annuler</button>
    </div>

    <a href="{{ path('app_main') }}">Annuler</a>
{% endblock %}

